<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity"
    android:background="@drawable/profil"
    >

    <!-- Rectangle -->
    <View
        android:id="@+id/rectangle_6"
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="167dp"
        android:background="@drawable/rectangle_6" />

    <View
        android:id="@+id/group_14"
        android:layout_width="157dp"
        android:layout_height="148dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="69dp"
        android:background="@drawable/group_14" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/etProfilName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="25sp" />
    <!--    <TextView-->
    <!--        android:id="@+id/etName"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_below="@+id/group_14"-->
    <!--        android:layout_centerHorizontal="true"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:fontFamily="@font/lato"-->
    <!--        android:text="Name"-->
    <!--        android:textColor="@color/black"-->
    <!--        android:textSize="25sp" />-->

    <TextView
        android:id="@+id/etProfilKelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etProfilName"
        android:text="Kelas"
        android:fontFamily="@font/lato"
        android:textSize="18sp"
        android:textColor="#BF8C00"/>



    <!-- Rectangle 90 -->
    <View
        android:id="@+id/rectangle_9"
        android:layout_width="434dp"
        android:layout_height="118dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-3.5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="294dp"
        android:background="@drawable/rectangle_9"
        />

    <!-- Vector -->
    <View
        android:id="@+id/vector"
        android:layout_width="100dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="317dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/vector"
        />

    <!-- Jangan Lupa bayar kas dan mengerjakan tugas !!!! -->
    <TextView
        android:id="@+id/jangan_lupa"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="165dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="333dp"
        android:text="@string/jangan_lupa"
        android:textAppearance="@style/jangan_lupa"
        android:gravity="top"
        android:fontFamily="@font/poppins"
        />

    <Button
        android:id="@+id/btn_setting_profil"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rectangle_9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_settingprofil"
        android:drawableRight="@drawable/ic_arrow_right"
        android:fontFamily="@font/poppins"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Setting Profil"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_tentang_aplikasi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_setting_profil"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_tentang_aplikasi"
        android:paddingLeft="10dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:paddingRight="10dp"
        android:fontFamily="@font/poppins"
        android:text="Tentang Aplikasi"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_share_emajer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_tentang_aplikasi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_share"
        android:paddingLeft="10dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:paddingRight="10dp"
        android:fontFamily="@font/poppins"
        android:text="Share E-Majer"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <!-- Keluar -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_keluar"
        android:layout_width="386dp"
        android:layout_height="49dp"
        android:layout_below="@+id/btn_share_emajer"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_buttonkeluar"
        android:fontFamily="@font/lato"
        android:onClick="logout"
        android:text="@string/keluar"
        android:textColor="#FF0000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btn_home_profil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_home_off" />
        
        <ImageButton
            android:id="@+id/btn_mading_profil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_mading_off"
            android:background="@color/white"
            />

        <ImageButton
            android:id="@+id/btn_account_profil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_account_on"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:background="@color/white"/>
    </RelativeLayout>
    

</RelativeLayout>