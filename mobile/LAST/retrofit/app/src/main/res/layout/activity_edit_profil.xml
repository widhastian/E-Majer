<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfilActivity"
    android:background="@drawable/profil"
    >

    <ImageButton
        android:id="@+id/btn_back_edit_profile"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_back_edit_profile"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengaturan Profil"
        android:fontFamily="@font/lato_bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <!-- Rectangle -->
    <View
        android:id="@+id/rectangle_6"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="167dp"
        android:background="@drawable/rectangle_6" />

    <View
        android:id="@+id/group_14"
        android:layout_width="157dp"
        android:layout_height="148dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="69dp"
        android:background="@drawable/group_14" />

    <EditText
        android:id="@+id/et_edit_nama"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/group_14"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:hint="Nama"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_edit_email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/et_edit_nama"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:hint="Email"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_edit_username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/et_edit_email"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:hint="Username"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_edit_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/et_edit_username"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:hint="Password"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_edit_kelas"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/et_edit_password"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:hint="Kelas"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_simpan_edit_profil"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_below="@+id/et_edit_kelas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_simpan_profil"
        android:fontFamily="@font/poppins_bold"
        android:text="Simpan Profil"
        android:textAllCaps="false"
        android:textSize="15sp" />

</RelativeLayout>