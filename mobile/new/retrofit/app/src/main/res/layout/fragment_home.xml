        android:fontFamily="@font/lato"
        android:gravity="center_horizontal|top"
        android:text="@string/riwayat_tra"
        android:textAppearance="@style/riwayat_tra" />

    <!-- Rectangle 21 -->
    <View
        android:id="@+id/rectangle_21"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="165dp"
        android:background="@drawable/rectangle_1" />

    <!-- ic riwayat transaksi -->
    <View
        android:id="@+id/ic_riwayat_transaksi"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="181dp"
        android:background="@drawable/ic_riwayattransaksi" />

    <!-- Catatan Pengeluaran -->
    <TextView
        android:id="@+id/catatan_pen"
        android:layout_width="93dp"
        android:layout_height="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="297dp"
        android:layout_marginTop="230.67dp"
        android:fontFamily="@font/lato"
        android:gravity="center_horizontal|top"
        android:text="@string/catatan_pen"
        android:textAppearance="@style/catatan_pen" />

    <!-- Rectangle catatan pengeluaran -->
    <View
        android:id="@+id/rectangle_catatan_pengeluaran"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="165dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/rectangle_1" />

    <!-- ic catatan pengeluaran -->
    <View
        android:id="@+id/ic_catatan_pengeluaran"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="331dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/ic_catatanpengeluaran" />


    <!-- Line 8 -->
    <View
        android:id="@+id/line_8"
        android:layout_width="366dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="146dp"
        android:background="@drawable/line_8"
        />

</RelativeLayout>