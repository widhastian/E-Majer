<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kelompok.emajer">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.EMajerv2">
        <activity
            android:name="com.kelompok.emajer.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kelompok.emajer.TentangAplikasiActivity"
            android:exported="false" />
        <activity android:name="com.kelompok.emajer.EditProfilActivity" />
        <activity
            android:name="com.kelompok.emajer.HomeActivity"
            android:exported="false" />
        <activity android:name="com.kelompok.emajer.Activity.Transaksi.PembayaranKas.detailpembayarankas" />
        <activity android:name="com.kelompok.emajer.Activity.Transaksi.PembayaranKas.pembayarankas" />
        <activity android:name="com.kelompok.emajer.Activity.Transaksi.RiwayatTransaksi.riwayatTransaksi" />
        <activity android:name="com.kelompok.emajer.Activity.Transaksi.RiwayatTransaksi.PaymentActivity" />
        <activity android:name="com.kelompok.emajer.Activity.Transaksi.CatatanPengeluaran.catatanpengeluaran" />
        <activity android:name="com.kelompok.emajer.Activity.Transaksi.CatatanPengeluaran.CatatanPengeluaranDetail" />
        <activity android:name="com.kelompok.emajer.Activity.Mading.MadingActivity" />
        <activity android:name="com.kelompok.emajer.RegisterActivity" />
        <activity android:name="com.kelompok.emajer.ProfilActivity" />
        <activity android:name="com.kelompok.emajer.databarang" />
        <activity android:name="com.kelompok.emajer.LoginActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>